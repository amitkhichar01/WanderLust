<% layout("./layouts/boilerplate.ejs") %>

<div class="row mt-3 w-100">
    <h3 class="col-6 offset-3 login-heading">login on Wanderlust</h3>
    <div class="col-5 offset-3 login-container">
        <form action="/account/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required />
                <div class="invalid-feedback">Enter username</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                    type="password"
                    name="password"
                    id="password"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback">Enter password</div>
            </div>
            <button class="btn btn-success">login</button>
        </form>
    </div>
</div>
