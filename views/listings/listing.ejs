<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div id="filters">
        <div class="filter"></div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let item of allListings) { %>
        <a href="/listing/<%= item.id%>" class="listing-link">
            <div class="card opactiy listing-card">
                <img
                    class="card-img-top"
                    src="<%= item.image.url%>"
                    alt="Card image cap"
                />
                <div class="card-body">
                    <b><p class="card-text"><%= item.title %></p></b>
                    <% if (item.price !== undefined && item.price !== null) { %>
                    <p>
                        &#8377; <%= item.price.toLocaleString("en-IN") %> /
                        night
                    </p>
                    <% }%>
                </div>
            </div>
        </a>
        <%}%>
    </div>
</body>
